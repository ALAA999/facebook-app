<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp">

            <ImageView
                android:id="@+id/imgcomment_owner"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/commentname_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="15sp"
                android:layout_toRightOf="@id/imgcomment_owner"
                android:text="Allosh"
                android:textColor="#0a66ca"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/comment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10sp"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5sp"
                android:visibility="gone"
                android:id="@+id/delete_mycomment"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_delete_black_24dp"
                android:layout_below="@id/comment_date"/>


            <TextView
                android:id="@+id/comment_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgcomment_owner"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="10sp"
                android:gravity="left"
                android:textColor="@color/Black"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/comment_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/comment_msg"
                android:layout_marginTop="5sp"
                android:layout_centerHorizontal="true"
                android:button="@drawable/custom_checkbox_like"
                android:checked="false"
                android:gravity="center" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>